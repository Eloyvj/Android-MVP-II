<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundCardMovie">

        <ImageView
            android:id="@+id/imageview_movielist_poster"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/textview_movielist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_movielist_poster"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:padding="16dp"
            android:maxLines="1"
            android:maxEms="8"
            android:ellipsize="end"
            tools:text="Mad Max 2: The Road Warrior"/>

        <ImageView
            android:id="@+id/imageview_favored_title"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/imageview_movielist_poster"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_favorite_empty_icon"
            android:paddingTop="10dp"
            android:paddingRight="8dp"
            tools:src="@tools:sample/avatars"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>